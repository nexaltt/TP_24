public class CoffeeShop {
    public static void main(String[] args) {
        CoffeeOrder coffee1 = new CoffeeOrder.CoffeeOrderBuilder()
                .coffeeType("Espresso")
                .milk(true)
                .sugar(2)
                .extra("Vanilla")
                .build();

        CoffeeOrder coffee2 = new CoffeeOrder.CoffeeOrderBuilder()
                .coffeeType("Cappuccino")
                .milk(false)
                .build();

        System.out.println(coffee1);
        System.out.println(coffee2);
    }
}
